{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["promise"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "promise/catch-or-return": "error",
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
